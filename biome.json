{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "a11y": {
        "noBlankTarget": "off"
      },
      "complexity": {
        "noExtraBooleanCast": "info",
        "noMultipleSpacesInRegularExpressionLiterals": "info",
        "noUselessCatch": "info",
        "noWith": "info"
      },
      "correctness": {
        "noChildrenProp": "info",
        "noConstAssign": "info",
        "noConstantCondition": "info",
        "noEmptyCharacterClassInRegex": "info",
        "noEmptyPattern": "info",
        "noGlobalObjectCalls": "info",
        "noInnerDeclarations": "info",
        "noInvalidConstructorSuper": "info",
        "noNewSymbol": "info",
        "noNonoctalDecimalEscape": "info",
        "noPrecisionLoss": "info",
        "noSelfAssign": "info",
        "noSetterReturn": "info",
        "noSwitchDeclarations": "info",
        "noUndeclaredVariables": "info",
        "noUnreachable": "info",
        "noUnreachableSuper": "info",
        "noUnsafeFinally": "info",
        "noUnsafeOptionalChaining": "info",
        "noUnusedLabels": "info",
        "noUnusedVariables": "info",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "info",
        "useIsNan": "info",
        "useJsxKeyInIterable": "info",
        "useValidForDirection": "info",
        "useYield": "info"
      },
      "security": {
        "noDangerouslySetInnerHtmlWithChildren": "info"
      },
      "suspicious": {
        "noAssignInExpressions": "info",
        "noAsyncPromiseExecutor": "info",
        "noCatchAssign": "info",
        "noClassAssign": "info",
        "noCommentText": "info",
        "noCompareNegZero": "info",
        "noControlCharactersInRegex": "info",
        "noDebugger": "info",
        "noDuplicateCase": "info",
        "noDuplicateClassMembers": "info",
        "noDuplicateJsxProps": "info",
        "noDuplicateObjectKeys": "info",
        "noDuplicateParameters": "info",
        "noEmptyBlockStatements": "info",
        "noFallthroughSwitchClause": "info",
        "noFunctionAssign": "info",
        "noGlobalAssign": "info",
        "noImportAssign": "info",
        "noMisleadingCharacterClass": "info",
        "noPrototypeBuiltins": "info",
        "noRedeclare": "info",
        "noShadowRestrictedNames": "info",
        "noUnsafeNegation": "info",
        "useGetterReturn": "info",
        "useValidTypeof": "info"
      }
    },
    "ignore": ["**/dist", "**/.eslintrc.cjs", "node_modules"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
